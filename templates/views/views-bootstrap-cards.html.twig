{#
/**
 * @file views-bootstrap-cards.html.twig
 * Default simple view template to display Bootstrap Cards.
 *
 *
 * - rows: Contains a nested array of rows. Each row contains an array of
 *   columns.
 *
 * @ingroup views_templates
 */
#}
<div class="container-fluid">
  <div class="row cards-masonry">
  {% for key, row in rows -%}
    {#   <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3 d-flex flex-column"> #}
    <div class="col-12 col-sm-12 col-md-4 col-lg-3 col-xl-2 col-xxl-2 card-masonry-wrapper d-flex">
      <div class="card card-masonry mb-5">
    {# Show image #}
    {% if row.image %}
        {{ row.image }}
    {% endif %}
    {% if row.title %}
      <div class="card-header">{{ row.title }}</div>
    {% endif %}
    {% if row.content %}
      <div class="card-body">
        {{ row.content }}
      </div>
    {% endif %}
      </div>
    </div>
  {%- endfor %}
  </div>
</div>
