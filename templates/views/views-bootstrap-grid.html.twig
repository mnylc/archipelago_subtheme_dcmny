{#
/**
 * @file views-bootstrap-grid.html.twig
 * Default simple view template to display Bootstrap Grids.
 *
 *
 * - columns: Contains rows grouped by columns.
 * - rows: Contains a nested array of rows. Each row contains an array of
 *   columns.
 * - column_type: Contains a number (default Bootstrap grid system column type).
 *
 * @ingroup views_templates
 */
#}
{%
  set classes = [
    'views-view-grid',
  ]
%}
{% set col_classes = options.row_class %}
{% if (options.row_class is traversable) %}
  {% set col_classes = options.row_class|merge(['card-masonry-wrapper', 'd-flex'] %}
{% else %}
  {% set col_classes = options.row_class ~ ' card-masonry-wrapper d-flex' %}
{% endif %}
{% if title %}
  <h3>{{ title }}</h3>
{% endif %}
<div id="{{ id }}" {{ attributes.addClass(classes) }}>
  <div class="row cards-masonry mb-5" data-masonry='{"percentPosition": true }'>
    {% for row in rows %}
      <div {{ row_attributes.addClass(col_classes) }}>
        {{ row }}
      </div>
    {% endfor %}
  </div>
</div>
