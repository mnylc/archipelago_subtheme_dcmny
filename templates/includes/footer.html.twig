<footer class="site-footer">
  {% block footer %}
    <div class="{{ container }}">
      <div class="site-footer__top clearfix">
      {% if page.footer_top %}
          {{ page.footer_top }}
      {% endif %}
      </div>
    </div>
    <div class="{{ container }}">
      <div class="site-footer__center row clearfix">
        {% if page.footer_center_left %}
          <div class="col-sm-12 col-md-6 col-lg-3">
          {{ page.footer_center_left }}
          </div>
        {% endif %}
        {% if page.footer_center_center %}
          <div class="col-sm-12 col-md-6 col-lg-3">
            {{ page.footer_center_center }}
          </div>
        {% endif %}
        {% if page.footer_center_right %}
            <div class="col-sm-12 col-md-12 col-lg-6">
          {{ page.footer_center_right }}
            </div>
        {% endif %}
      </div>
    </div>
    <div class="site-footer__bottom clearfix">
      <div class="{{ container }}">
      {% if page.footer_bottom %}
          {{ page.footer_bottom }}
      {% endif %}
      </div>
    </div>
  {% endblock %}
</footer>
